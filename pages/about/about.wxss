.navbar {
  position: fixed;
  z-index: 1002;
  top: 0;
  width: 750rpx;
  height: 65px;
  text-align: center;
  overflow: hidden;
  background-color:hsla(0,0%,100%,.97);
  border-bottom: 1rpx solid #ebebeb; 
}

.return {
  position: absolute;
  z-index: 1002;
  bottom:10px;
  font-size: 18px;
  color: #222;
  padding:0 4%;
}

.brand {
  padding-top: 100px;
  padding-bottom: 30px;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 6%;
}

.logo {
  height: 108rpx;
  width: 108rpx;
}

.name {
  padding-left: 20px;
}

.name_cn {
  font-size: 48rpx;
  font-weight: 600;
  color: #222;
}

.name_en {
  font-size: 30rpx;
  font-weight: 300;
  color: #999;
}

.tips {

  margin: 0 auto;
  padding: 10px 6%;
  margin-bottom: 25px;
  font-size: 28rpx;
  color: #1286fe;
  background-color: #ebf3fb;
  border: 1px solid #f8f8f8;
}

.aboutInsight {
  width: 88%;
  margin: 0 auto;
  font-size: 26rpx;
  font-weight: 300;
  letter-spacing: 1.2px;
  color: #444;
  text-align: left;
}

.aboutInsight view {
  padding-bottom: 20px;
}

.captain {
  padding-left: 6%;
  color: #222;
  font-size: 38rpx;
  font-weight: 600;
  padding-bottom: 20px;
}
