page {
  background-color: #f2f2f2;
}

.box_bg {
  position: fixed;
  top: 0;
  width: 750rpx;
  background-color: #118eea;
  z-index: 1001;
}

.return {
  position: absolute;
  z-index: 1002;
  bottom:48px;
  font-size: 19px;
  color: white;
  left: 4%;
}


.search_box {
  position: fixed;
  width: 750rpx;
  z-index: 1002;
} 

.search_input {
  border-radius: 12rpx;
  height: 50px;
  width: 90%;
  margin: 0 auto;
  padding-left: 20rpx;
  background-color: white;
}

.search_icon {
  position: fixed;
  z-index: 1003;
  height: 24px;
  width: 24px;
  right: 7%
}

.content_view {
  width: 750rpx;
}

.hot_tag {
  padding-left: 5%;
  padding-bottom: 20rpx;
  font-size: 28rpx;
  color: #444;
}

.content_view .tags {
  width: 90%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.content_view .tags .tag {
  font-size: 26rpx;
  color: #1286fe;
  background-color: white;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  margin-right: 18rpx;
  margin-bottom: 20rpx;
}


/* article */

.articles_list {
  background-color: #fff;
  line-height: 1.5;
  color: #444;
  font-size: 30rpx;
  font-weight: 400;
  overflow: hidden;
  position: relative;
  border-top: 1px solid #d9d9d9;
}

.article-link {
  padding: 0 20px;
  padding-left: 0px;
  margin-left: 3%;
  position: relative;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #d9d9d9;
}

.article-navigator {
  padding: 10px 0;
  width: 99%;
}

.article_description {
  padding-left: 3rpx;
  padding-top: 3rpx;
}

.author {
  font-size: 24rpx;
  color: #b2b2b2;
}

.date {
  font-size: 24rpx;
  color: #b2b2b2;
  padding-left: 10rpx;
}

.link-icon {
  content: " ";
  display: inline-block;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8cd;
  border-style: solid;
  position: relative;
  top: -2px;
  top: -1px;
  margin-left: 0.3em;
  text-align: right;
  color: #888;
}