@import "./card.wxss";

.navbar {
  background-color: #FFF;
  position: fixed;
  z-index: 1002;
  top: 0;
  width: 750rpx;
  overflow: hidden;
}

.navbar-opacity {
  background-color:hsla(0,0%,100%,.97);
  border-bottom: 1rpx solid #ebebeb; 
}

.nav_insightLogo {
  position: absolute;
  bottom: 6px;
  width: 400rpx;
  height: 64rpx;
  z-index: 1003;
}

.common_header {
  justify-content: space-between;
}

.page_header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.insightLogo {
  width: 460rpx;
  height: 75rpx;
}

.searchIcon {
  width: 64rpx;
  height: 64rpx;
}

.aboutUs {
  padding: 0;  
  color: #1286fe;
  font-size: 15px;
  font-weight: 500;
  height: 64rpx;
  line-height: 64rpx;
}

.disclaimer {
  padding: 10px;
  padding-left: 20PX;
  color: #003D4F;
  font-size: 13px;
}


.category_links, .full_category_links {
  display: flex;
  flex-wrap: wrap;
  padding-top: 10px;
  padding-bottom: 4px;
}

.full_category_links {
  padding-bottom: 20px;
}

.over-panel {
  position: fixed;
  background-color: #fff;
  z-index: 1003;
}

.over-panel-layer {
  position: fixed;
  top: 0;
  z-index: 1001;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
}

.category_link {
  font-size:14px;
  font-weight: 500;
  color: #282828;
  height: 38px;
  line-height: 38px;
  width: 230rpx;
  margin: 5px auto;
  text-align: center;
  border-radius: 5px;
  background-color: #edf1f3;
}

