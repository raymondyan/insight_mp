.recent_post {
  background-color: #edf1f3;
  padding-top: 3px;
}

.articleBlock {
  background-color: #FFF;
  padding: 15px 0 15px 0;
  margin: 9px;
  border-radius: 8px;
}

.articleBlock .categories {
  padding-left: 3%;
  display: flex;
  flex-direction: row;
  margin-bottom: 5px;
}

.articleBlock .category {
  font-size: 25rpx;
  color: #6e9e78;
  background: #F0F6F1;
  padding: 2px 6px;
  margin-right: 8px;
  border-radius: 4px;
}

.articleBlock .title {
  padding:0 3%;
  font-size: 36rpx;
  font-weight: 500;
  color: #1a1a1a;
}

.articleBlock .excerpt {
  padding-left: 3%;
  padding-right: 3%;
  padding-top: 5px;
  font-size: 28rpx;
  color: #444;
  text-align: left;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  word-break: break-all;
}

.articleBlock .details {
  padding-top: 5px;
  padding-left: 3%;
  font-size: 26rpx;
  color: #999;
}

.articleBlock .details text {
  padding-right: 8px;
}

.articleBlock .articleImage {
  margin-top: 8px;
  width: 100%;
  height: 300rpx;
  background-color: #ebebeb;
}